<%- include('partials/header', { title, categories, q, category, seller }) %>
<div class="container login-container">
  <div style="flex: 1; display: flex; justify-content: center;">
    <div class="login-form">
      <h2 class="login-title">Seller Login</h2>
      <form method="POST" action="/sellers/login">
        <div class="form-group">
          <input name="email" placeholder="Email" class="login-input" required>
        </div>
        <div class="form-group">
          <input name="password" type="password" placeholder="Password" class="login-input" required>
        </div>
        <div class="button-container">
          <button type="submit" class="btn primary">Login</button>
        </div>  
      </form>
    </div>
  </div>
  <div style="flex: 1; display: flex; justify-content: center;">
    <div class="login-form">
      <h2 class="login-title">Seller Signup</h2>
      <form method="POST" action="/sellers/signup">
        <div class="form-group">
          <input name="name" placeholder="Name" class="login-input" required>
        </div>
        <div class="form-group">
          <input name="email" placeholder="Email" class="login-input" required>
        </div>
        <div class="form-group">
          <input name="password" type="password" placeholder="Password" class="login-input" required>
        </div>
        <div class="button-container">
          <button type="submit" class="btn primary">Signup</button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('partials/footer') %>